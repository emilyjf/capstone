<section>
  <div class="row">
    <div class="col-sm-8 col-sm-offset-2">
      <div class="response-single">
        <h1>Edit Response</h1>
        <%= form_tag "/responses/#{@response.id}", method: :patch do %>
          <div class="form-group">
            Response: <input type="text" name="response" value="<%= @user.response %>">
          </div>
          <input type="submit" value="Edit response">
        <% end %>
      </div>
    </div>
  </div>
</section>

