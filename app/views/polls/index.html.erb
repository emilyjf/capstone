<section>
  <div class="row">
    <div class="col-md-12">
      <% if @polls.empty? %>
        <h4>Aw, bummer! You have no meetings created yet. <%= link_to "Create meeting", new_poll_url, class: "btn btn-primary" %></h4>
      <% end %>
    </div>

  <div class="column-left">
    <div class="thumbnail well">
      <h2> Created Meetings </h2>
        <% @polls.each do |poll| %>
          <ul style="list-style-type:none">
              <li><h3>                                                                                
                <%= link_to poll.title, "/polls/#{poll.id}" %> <%= link_to "Edit", edit_poll_url(poll), class: "btn btn-primary" %>
                  <% if poll.user.id == current_user.id %><%= link_to "Finalize", "/polls/#{poll.id}/finalize", class: "btn btn-danger" %></h3></li>
                  <!-- <li><h5><%= poll.status %></h5></li> -->
                <% end %>
          </ul>
                    
        <% end %>
    </div>
  </div>
  
  <div class="column-right">
    <div class="thumbnail well">
      <h2> Your Responses </h2>
        <% @responses.each do |response| %>
            <ul style="list-style-type:none">
              <li><h3><%= response.id %></h3></li>
              <li><h3><%= link_to poll.title, "/polls/#{poll.id}" %></h3></li>
              <li><h3><%= response.answer %></h3></li>
            </ul>
            </div>
              <%= link_to "Edit response", edit_response_url(response), class: "btn btn-primary" %>
            </div>
          </div>
        <% end %>
    </div>
  </div>
 </div>
</section>
