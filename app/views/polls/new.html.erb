<section>
  <div class="row">
    <div class="col-sm-8 col-sm-offset-2">
      <div class="user_single">
        <h1>Create a Meeting</h1>
          <%= form_tag '/polls', method: :post do %>
          <div class="form-group">
            <%= label_tag :title %>
            <%= text_field_tag :title, nil, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= label_tag :location %>
            <%= text_field_tag :location, nil, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= label_tag :invitees %>
            <%= email_field_tag :email, nil, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= label_tag :status %>
            <%= text_field_tag :status, nil, class: "form-control" %>
          </div>
            <%= submit_tag "Save Meeting & Choose Dates", class: "btn btn-success" %>
        <% end %>
      </div>
    </div>
  </div>
</section>
