<section>
  <div class="row">
    <div class="col-sm-8 col-sm-offset-2">
      <div class="poll_single">
      <h1>Choose Meeting Time(s)</h1>
      <h2>Enter a date for a meeting, or select dates from which your invitees can choose.</h2>
        <div class="col-sm-4 col-sm-offset-2">
          <%= form_tag '/appts', method: :post do %>
            <%= hidden_field_tag :poll_id, @poll_id %>
          <div class="form-group">
            <%= label_tag :date %>
            <%= date_field :scheduled_slot, nil, class: "form-control" %>
          </div>
          <div>
            <%= label_tag :time %>
            <%= time_field :time, :started_at %>
          </div>
          <br>
            <%= submit_tag "Save & Send Invites", class: "btn btn-success" %>
          <% end %>
          </br>
        </div>
      </div>
    </div>
</section>

   





