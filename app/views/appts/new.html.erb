<section>
  <div class="row">
    <div class="col-sm-8 col-sm-offset-2">
      <div class="poll_single">
      <h1>Choose Meeting Time(s)</h1>
      <h2>Enter a date for a meeting, or select dates from which your invitees can choose.</h2>
        <%= form_tag '/appts', method: :post do %>
          <% hidden_field_tag :poll_id, params[:poll_id] %>
          <div class="form-group">
            <%= label_tag :date_1 %>
            <%= date_field :scheduled_slot, nil, class: "form-control" %>
          </div>
          <div>
            <%= label_tag :time_1 %>
            <%= time_field :task, :started_at %>
          </div>
           <div class="form-group">
            <%= label_tag :date_2 %>
            <%= date_field :scheduled_slot2, nil, class: "form-control" %>
          </div>
          <div>
            <%= label_tag :time_2 %>
            <%= time_field :task, :started_at %>
          </div>
           <div class="form-group">
            <%= label_tag :date_3 %>
            <%= date_field :scheduled_slot3, nil, class: "form-control" %>
          </div>
          <div>
            <%= label_tag :time_3 %>
            <%= time_field :task, :started_at %>
          </div>
          <br>
            <%= submit_tag "Save & Send Invites", class: "btn btn-success" %>
          <% end %>
          </br>
        </div>
      </div>
    </div>
</section>

   





